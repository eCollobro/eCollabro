@model System.Web.Mvc.HandleErrorInfo
<br />
<div class="text-danger">
    <h1>Oops some thing went wrong</h1>
    <p>Sorry, we are not able to process your reqiest due to some unexpected error...</p>
    <p>Please re-check if you can perform the same by doing the action again. Click here if you want to go to <a href="/">Homepage</a>?</p>
    @if (Model != null)
    {
        {
            Response.SubStatusCode=500;
            Response.StatusDescription=Model.Exception.Message;
        }
        <div class="text-info" style="display:none">
            @Model.ActionName
            @Model.ControllerName
            @Model.Exception.Message
            @Model.Exception.ToString()
        </div>
    }
</div>

