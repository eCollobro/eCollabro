@using eCollabro.Client.Models.Content;
@using eCollabro.Client.Models.Core;
@using eCollabro.Web.Base
@using eCollabro.Common;
@model AnnouncementModel
@Scripts.Render("~/bundles/announcement")
<div id="divAnnouncement" ng-controller="announcementController" ng-init="initialize(@Model.AnnouncementId)">

    @Html.Partial("_PageHeader", new PageHeaderModel { ViewId = "Announcement" })
    <div ng-show="isVisible">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">{{announcement.AnnouncementTitle}}</div>
            <div class="panel-body">
                <div class="text-info">{{announcement.AnnouncementDescription}}</div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/eCollabro.Web.Content/Views/ContentComment/Index.cshtml", new ContentCommentModel { ContextId = (int)ContextEnum.Announcement, ContextContentId = Model.AnnouncementId })