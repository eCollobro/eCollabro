@using eCollabro.Client.Models.Content;
@using eCollabro.Client.Models.Core;
@using eCollabro.Web.Base;
@model AnnouncementModel
@if (!Request.IsAjaxRequest())
{
    <script type="text/javascript" src="~/Areas/Content/app/controllers/announcement/dashboardWidget.js"></script>
}
<div id="divAnnouncementHome" ng-controller="announcementDashboardWidgetController" ng-init="initialize()">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading"><span ng-click="changeCaption()" data-toggle="collapse" title="expand/collapse" data-target="#collapseAnnouncement" class="{{caption}} text-primary"></span> Recent Announcements <span class="badge">{{recentAnnouncements.length}}</span></div>
        <div id="collapseAnnouncement" class="panel-collapse collapse in">
            <div class="panel-body widget">
                <div id="divSummaryMessageAnnouncementWidget"></div>
                <ul class="list-group">
                    <li class="list-group-item" ng-repeat="announcement in recentAnnouncements">
                        <p class="list-group-item-heading"><a href="/content/announcement/announcement/{{announcement.AnnouncementId}}">{{announcement.AnnouncementTitle}}</a></p>
                        <p class="list-group-item-text"> {{announcement.AnnouncementDescription}}</p>
                    </li>
                </ul>
                <div ng-show="recentAnnouncements.length==0" class="text-info">There are no records to show.</div>
            </div>
            <div class="panel-footer"><a href="/content/announcement/">Announcement Home</a> | <a href="/content/announcement/announcements">Search</a></div>
        </div>
    </div>
</div>
