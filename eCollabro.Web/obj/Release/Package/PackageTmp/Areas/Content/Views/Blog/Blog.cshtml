@using eCollabro.Client.Models.Content;
@using eCollabro.Client.Models.Core;
@using eCollabro.Web.Base;
@using eCollabro.Common;
@model BlogModel
@Scripts.Render("~/bundles/blog")
<div id="divBlog" ng-controller="blogController" ng-init="initialize(@Model.BlogId)">

    @Html.Partial("_PageHeader", new PageHeaderModel { ViewId = "Blog", PageTitle = "{{blog.BlogTitle}}" })
    <div ng-show="isVisible">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">{{blog.BlogDescription}}</div>
            <div class="panel-body">
                <div id="divBlogContent"></div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Content/Views/ContentComment/Index.cshtml", new ContentCommentModel { ContextId = (int)ContextEnum.Blog, ContextContentId = Model.BlogId })